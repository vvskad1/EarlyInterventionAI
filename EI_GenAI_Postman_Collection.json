{
  "info": {
    "name": "Early Intervention GenAI API",
    "description": "FastAPI backend for Early Intervention GenAI prototype with RAG-powered intervention planning",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Root - API Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8081/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": [""]
        },
        "description": "Get API information and available endpoints"
      }
    },
    {
      "name": "2. Upload Knowledge Base",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "/path/to/your/file.txt",
              "description": "Upload a .txt or .md file as knowledge base"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:8081/api/rag/upload",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "rag", "upload"]
        },
        "description": "Upload a knowledge base file (.txt or .md) to use for RAG retrieval"
      }
    },
    {
      "name": "3. Generate Plan - 24mo Communication",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"age_months\": 24,\n  \"domain\": \"communication\",\n  \"extra_info\": \"struggles with two-word combinations and following simple directions\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/plan",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "plan"]
        },
        "description": "Generate intervention plan for 24-month-old with communication delays"
      }
    },
