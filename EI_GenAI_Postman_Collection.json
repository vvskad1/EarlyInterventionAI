          "raw": "{\n  \"message\": \"What about during mealtime specifically?\",\n  \"session_id\": \"PASTE_SESSION_ID_HERE\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/chat",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "chat"]
        },
        "description": "Continue existing chat session - replace PASTE_SESSION_ID_HERE with actual session_id"
      }
    },
