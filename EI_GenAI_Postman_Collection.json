    {
      "name": "6. Chat - New Session (Following Directions)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"How can I help my 18-month-old learn to follow simple directions?\",\n  \"age_months\": 18,\n  \"domain\": \"communication\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/api/chat",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "chat"]
        },
        "description": "Start new chat session - save the session_id from response for follow-ups"
      }
    },
    {
